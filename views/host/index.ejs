<%- include('../template/header.ejs') %>
<section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><strong>Data Host</strong></h3>
              <div class="float-right">
                <a href="/host/tambah" class="btn btn-sm btn-primary"><i class="fas fa-user-plus"></i>&nbsp;&nbsp;Tambah Host</a>
              </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>No</th>
                  <th>Nama Host</th>
                  <th>Alamat Host</th>
                  <th>No HP</th>
                  <th>Aksi</th>
                </tr>
                </thead>
                <tbody>
                    <% listhost.forEach(function(lh) { %>
                    <tr>
                        <td id="no"></td>
                        <td id="nama"><%=  lh.nama_host %></td>
                        <td><%= lh.alamat_host %></td>
                        <td><%= lh.no_hp_host %></td>
                        <td>
                          <a href="/host/edit/<%= lh.id_host %>" class="btn btn-sm btn-warning"><i class="fas fa-user-edit"></i></a>
                          <a href="javascript:hapus('<%= lh.id_host %>');" class="btn btn-sm btn-danger"><i class="fas fa-user-minus"></i></a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  
<%- include('../template/footer.ejs') %>

<% if (messages.error) { %>
  <script>
  $(document).ready(function () {
    toastr.error('<%= messages.error %>')
  });
  </script>
<% } %>
<% if (messages.success) { %>
  <script>
  $(document).ready(function () {
    toastr.success('<%= messages.success %>')
  });
  </script>
<% } %>

<script>
  function hapus(id) {
    Swal.fire({
      title: 'Yakin hapus data?',
      text: "Data yang sudah dihapus tidak bisa dikembalikan!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Ya, hapus!',
      cancelButtonText: 'Batal'
    }).then((result) => {
      if (result.isConfirmed) {
        Swal.fire(
          'Terhapus!',
          'Data berhasil dihapus.',
          'success'
        ).then((result)=>{
          location.href = "host/hapus/" + id;
        });
      }
    });
  }
</script>